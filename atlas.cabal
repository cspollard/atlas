cabal-version:       >=1.10

library
  exposed-modules:     Data.Atlas.CrossSections
                     , Data.Atlas.DataMC
                     , Data.Atlas.Histogramming
                     , Data.Atlas.ProcessInfo
                     , Data.Atlas.Variation
                     , Data.Atlas.PtEtaPhiE

  other-modules:
  other-extensions:

  build-depends:       base == 4.9.*
                     , lens == 4.15.*
                     , list-transformer == 1.0.*
                     , transformers == 0.5.*
                     , foldl == 1.2.*
                     , bytestring == 0.10.*
                     , text == 1.2.*
                     , containers == 0.5.*
                     , attoparsec == 0.13.*
                     , cereal == 0.5.*
                     , vector == 0.11.*
                     , tagged == 0.8.*
                     , histogram-fill == 0.8.*
                     , hhep == 0.2.*
                     , histogram-extras == 0.2.*
                     , ttree == 0.2.*

  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:         -Wall -O1
  ghc-prof-options:    -Wall -O0 -fprof-auto -caf-all

executable histToYoda
  main-is:             app/histToYoda.hs
  build-depends:       base == 4.9.*
                     , lens == 4.15.*
                     , containers == 0.5.*
                     , bytestring == 0.10.*
                     , text == 1.2.*
                     , cereal == 0.5.*
                     , zlib == 0.6.*
                     , optparse-applicative == 0.13.*
                     , histogram-extras == 0.2.*
                     , atlas == 0.1.*

  default-language:    Haskell2010
  ghc-options:         -Wall -O1
  ghc-prof-options:    -Wall -O0 -fprof-auto -caf-all -rtsopts
